/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transform: translateX(-120%)
  transition: 0.5s
  max-height: 0
  padding 0
  &.order-enter-active
    max-height: 60px
    padding 2rem 0 !important
    transform: translateX(0)


.order-exit
  transition: 0.5s
  transform: translateX(0)
  &.order-exit-active
    padding 2rem 0 !important
    transform: translateX(120%)

.count-enter
  transition: 0.5s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-exit
  transform: translateY(0)
  transition: 0.5s
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    transform translateY(-100%)